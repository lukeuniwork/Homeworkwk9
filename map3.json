{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "data": {
    "url": "SA3_2021_AUST.geojson",
    "format": {"type": "json"}
  },
  "transform": [
    {
      "lookup": "properties.SA3_CODE21",
      "from": {
        "data": {"url": "fires_by_SA3.csv"},
        "key": "SA3_CODE21",
        "fields": ["fire_count"]
      }
    }
  ],
  "projection": {
    "type": "equirectangular",
    "center": [134, -28],
    "scale": 1000
  },
  "mark": {
    "type": "geoshape",
    "stroke": "white",
    "strokeWidth": 0.3
  },
  "encoding": {
    "color": {
      "field": "fire_count",
      "type": "quantitative",
      "title": "Fire Detections",
      "scale": {"scheme": "orangered"}
    },
    "tooltip": [
      {"field": "properties.SA3_NAME21", "type": "nominal", "title": "Region"},
      {"field": "fire_count", "type": "quantitative", "title": "Fires"}
    ]
  }
}
